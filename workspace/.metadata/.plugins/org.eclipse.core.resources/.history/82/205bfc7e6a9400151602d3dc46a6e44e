package edu.iut.app;

import java.text.SimpleDateFormat;
import java.util.ArrayList;
import java.util.Locale;

import javax.swing.JOptionPane;

public class Date extends ArrayList<ExamEvent> implements IExamEvent {

	@Override
	public ArrayList<ExamEvent> critere(ArrayList<ExamEvent> examEvents) {
		ArrayList <ExamEvent> dateExam = new ArrayList<ExamEvent>();
	
		
	SimpleDateFormat sdf = new SimpleDateFormat("jj-mm-aaaa", Locale.FRANCE);
	sdf.setLenient(true);	
	Date d = new Date();
	String date="" ;
	String dateFormat = sdf.format(sdf);
	
		for(ExamEvent ee :examEvents) {
			date=sdf.format(ee.getExamDate());
			if (date == dateFormat){
				dateExam.add(ee);
			}
		}
		return dateExam;
	}
	
}

	
